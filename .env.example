# BuildForever Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=production
FLASK_PORT=5000
FLASK_SECRET_KEY=change-this-to-a-secure-random-string

# Timezone
TZ=UTC

# GitLab Configuration
GITLAB_HOSTNAME=gitlab.example.com
GITLAB_ROOT_PASSWORD=secure-password-here
LETSENCRYPT_ENABLED=true
LETSENCRYPT_EMAIL=admin@example.com

# Database Configuration (for saved credentials)
DATABASE_PATH=/app/data/buildforever.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/buildforever.log

# Security
# Enable HTTPS redirect in production
FORCE_HTTPS=false

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600
